{% extends "base.html.twig" %}

{% block stylesheets %}
	{{parent()}}
{% endblock %}

{% block body %}
	<div class="container-fluid">
      <div class="row-fluid">
        <div class="span2 pull-left">
          <div id="sidebar-wrapper" >
              <ul class="sidebar-nav" id="sidebar">     
                {% for forum in subforum %}
                <li><a href="{{path('portal_community',{'currentforum':forum.subForumName})}}">{{forum.subForumName}}<span class="sub_icon glyphicon glyphicon-link"></span></a></li>
                {% endfor %}
              </ul>
          </div>
        </div>

        <div class="span3 pull-right">
               <a class="btn btn-default btn-lg" href="{{path('portal_thread_create')}}" role="button">Post Thread</a>
        </div>

        <div class="container">
          <div class="masthead">
            <h3 class="muted">{{currentforum}}</h3>
            <div class="navbar">
              <div class="navbar-inner">
                <div class="container">
                  <ul class="nav">
                    <li><a href="{{path('portal_homepage',{'currentforum':currentforum})}}">Friend Threads</a></li>
                    <li class="active"><a href="{{path('portal_community',{'currentforum':currentforum})}}">Community Threads</a> </li>
                    <li><a href="{{path('portal_global',{'currentforum':currentforum})}}">Global Threads</a></li>
                    <li><a href="{{path('portal_subscribed',{'currentforum':currentforum})}}">Subscribed Threads</a></li>
                  </ul>
                </div>
              </div>
            </div><!-- /.navbar -->
        </div>
        
          <!-- Jumbotron -->
          <!-- TBD thread listing for the friends -->
          <!--The thread title has to be a link for the thread view page-->
          <div class="table-responsive"> 
              <table class="table table-striped">
                  <thead>
                      <tr>
                          <th>Label</th>
                          <th>Title</th>
                          <th>Start Date</th>
                          <th>Replies</th>
                          <th>Last Message</th>
                      </tr>
                  </thead>
                  <tbody>
                      {% for thread in threads %}
                      <tr>
                        <td>{% if thread.thdLabel!='None' %} {{thread.thdLabel}} {% endif %}</td>
                        <td><a href="{{path('portal_thread',{'threadid':thread.id,'currentforum':currentforum})}}?id=0">{{thread.thdSubject}}</a></td>
                        <td>{{thread.createdAt|date('Y-m-d')}}</td>
                        <td>{{thread.numReply}}</td>
                        <td>{{thread.updatedAt|date('Y-m-d')}}</td>
                      </tr>
                      {% endfor %}
                  </tbody>
              </table>
          </div>
      
          <!--Footer for the webpage-->
        <div class="footer">
            <p>&copy; ThreadGab.com 2014</p>
        </div>
        </div>
      </div>
  </div>
{% endblock %}


